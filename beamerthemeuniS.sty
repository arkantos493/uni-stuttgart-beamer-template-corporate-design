\newcommand{\email}[2][useicon]{
	%% check if a correct option has been provided
	\IfStrEqCase{#1}{% 
		{useicon}{\gdef\@emailicon{\faIcon[regular]{envelope}}}
		{usetxt}{\gdef\@emailicon{\iflanguage{ngerman}{E-Mail}{email}}}}
		[\PackageError{email}{unknown option!}{}]
	
	\gdef\@email{\href{mailto:#2}{#2}}
}

\newcommand{\phone}[2][useicon]{
	%% check if a correct option has been provided
	\IfStrEqCase{#1}{% 
		{useicon}{\gdef\@phoneicon{\faIcon{phone}}}
		{usetxt}{\gdef\@phoneicon{\iflanguage{ngerman}{Telefon}{phone}}}}
		[\PackageError{phone}{unknown option!}{}]
	
	\gdef\@phone{\phonenumber{#2}}
}

\renewcommand{\fax}[2][useicon]{
	%% check if a correct option has been provided
	\IfStrEqCase{#1}{% 
		{useicon}{\gdef\@faxicon{\faIcon{fax}}}
		{usetxt}{\gdef\@faxicon{\iflanguage{ngerman}{Fax}{fax}}}}
		[\PackageError{fax}{unknown option!}{}]
	
	\gdef\@fax{#2}
}


\newcommand{\address}[4][useicon]{
	%% check if a correct option has been provided
	\IfStrEqCase{#1}{% 
		{useicon}{\gdef\@addressicon{\faIcon{map-marker-alt}}}
		{usetxt}{\gdef\@addressicon{\iflanguage{ngerman}{Adresse}{address}}}}
		[\PackageError{address}{unknown option!}{}]
		
	\gdef\@street{#2}
	\gdef\@zip{#3}
	\gdef\@address{\href{http://maps.google.com/?q=#2+#3}{\makecell[tl]{#2\\#3\\\iflanguage{ngerman}{Raum}{Room}: #4}}}
}

\newcommand{\officehours}[2][useicon]{
	%% check if a correct option has been provided
	\IfStrEqCase{#1}{% 
		{useicon}{\gdef\@officehoursicon{\faIcon[regular]{calendar-check}}}
		{usetxt}{\gdef\@officehoursicon{\iflanguage{ngerman}{Sprechstunden}{office hours}}}}
		[\PackageError{officehours}{unknown option!}{}]
	
	\gdef\@officehours{#2}
}

\newcommand{\website}[2][useicon]{
	%% check if a correct option has been provided
