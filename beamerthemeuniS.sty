\newcommand{\cclicense}[2][]{
	%% process options
	\setkeys{cclic}{version=4.0, currency=EUR, #1}
	
	%% get license, if license is unsupported, throw error
	\IfStrEqCase{#2}{% 
		{by}{\def\cclic@type{by}}
		{by-nc}{\def\cclic@type{by-nc}}
		{by-nc-nd}{\def\cclic@type{by-nc-nd}}
		{by-nc-na}{\def\cclic@type{by-nc-na}}
		{by-nd}{\def\cclic@type{by-nd}} 
		{by-sa}{\def\cclic@type{by-sa}} 
		{cc0}{\def\cclic@type{cc-zero}} 
		{cc-zero}{\def\cclic@type{cc-zero}}}
		[\PackageError{CC License}{Illegal Creative Commons License Type!}{}]
	
	%% get license url
	\edef\cclic@lang{\iflanguage{ngerman}{german}{\languagename}}
	\xdef\@cclic@url{https://creativecommons.org/licenses/\cclic@type/\cclic@version/deed.\cclic@lang}
	
	%% get license file
	\xdef\@cclic@image{.license/\cclic@type.\cclic@currency.png}
}

